<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Attendance Record</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/student.css"> <!-- Ensure the path to CSS is correct -->
</head>
<body>
  <div class="container mt-4">
    <a href="/dashboard" class="btn btn-primary mb-3">Back to Dashboard</a> <!-- Link to Dashboard -->
    <h1 class="mb-3">Attendance Record for <%= studentName %> (<%= advisor %>)</h1>
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th>Class</th>
          <th>Absences</th>
          <th>Tardies</th>
        </tr>
      </thead>
      <tbody>
        <% for (const [className, record] of Object.entries(classes)) { %>
        <tr>
          <td><%= className %></td>
          <td><%= record.Absences %></td>
          <td><%= record.Tardies %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
